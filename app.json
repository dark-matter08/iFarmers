{
  "expo": {
    "name": "iFarmers",
    "slug": "iFarmers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/perf",
      "@react-native-firebase/crashlytics",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ifarmers",
      "googleServicesFile": "./google-config/GoogleService-Info.plist",
      "useFrameworks": "static",
      "config": {
        "googleMapsApiKey": "AIzaSyDdRXAiBTcVpM-97pDb9dkNdH4J-klXcCg"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "config": {
          "googleMapsApiKey": "AIzaSyDdRXAiBTcVpM-97pDb9dkNdH4J-klXcCg"
        }
      },
      "package": "com.ifarmers",
      "googleServicesFile": "./google-config/google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
